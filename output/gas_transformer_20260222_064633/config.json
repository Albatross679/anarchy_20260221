{
  "name": "gas_transformer",
  "model_type": "transformer",
  "seed": 42,
  "output_dir": "output",
  "tensorboard": {
    "enabled": true,
    "log_system_metrics": true,
    "log_cpu": true,
    "log_gpu_utilization": true,
    "log_vram": true,
    "log_gpu_temp": true,
    "log_gpu_power": true,
    "log_hparams_text": true,
    "log_histograms": true,
    "histogram_every_n_epochs": 5
  },
  "output": {
    "base_dir": "output",
    "save_config": true,
    "timestamp_format": "%Y%m%d_%H%M%S",
    "subdirs": {
      "checkpoints": "checkpoints",
      "tensorboard": "tensorboard"
    }
  },
  "console": {
    "enabled": true,
    "filename": "console.log",
    "tee_to_console": true
  },
  "checkpointing": {
    "enabled": true,
    "save_best": true,
    "save_every_n_epochs": 5,
    "metric": "rmse",
    "mode": "min",
    "best_filename": "model_best.pt"
  },
  "data": {
    "meter_files": [
      "data/meter-data-sept-2025.csv",
      "data/meter-data-oct-2025.csv"
    ],
    "building_metadata_file": "data/building_metadata.csv",
    "weather_file": "data/weather-sept-oct-2025.csv",
    "utility_filter": "GAS",
    "cleaner": {
      "enabled": true,
      "lookup_path": "data/site_to_building_lookup.csv",
      "fuzzy_threshold": 80.0,
      "gap_limit_intervals": 8
    },
    "use_cleaned_data": true,
    "cleaned_data_dir": "data",
    "weather_features": [
      "temperature_2m",
      "relative_humidity_2m",
      "dew_point_2m",
      "direct_radiation",
      "wind_speed_10m",
      "cloud_cover",
      "apparent_temperature",
      "precipitation"
    ],
    "building_features": [
      "grossarea",
      "floorsaboveground",
      "building_age"
    ],
    "time_features": [
      "hour_of_day",
      "minute_of_hour",
      "day_of_week",
      "is_weekend"
    ],
    "use_precomputed_features": false,
    "precomputed_features_dir": "data",
    "temporal_split": true,
    "split_date": "2025-10-01",
    "random_split_ratio": 0.8,
    "seq_length": 48,
    "stride": 4,
    "normalize_features": true,
    "normalize_target": true,
    "batch_size": 512,
    "num_workers": 2,
    "pin_memory": true,
    "parquet_path": "data/tree_features_gas_cross.parquet",
    "sparse_prefixes": [
      "heat_",
      "steam_",
      "cooling_"
    ],
    "always_off_threshold": 0.999,
    "zero_threshold": 1e-05
  },
  "transformer": {
    "d_model": 128,
    "n_heads": 4,
    "n_layers": 4,
    "d_ff": 256,
    "dropout": 0.2,
    "fc_dims": [
      128,
      64
    ],
    "dropout_fc": 0.3,
    "activation": "gelu",
    "epochs": 100,
    "learning_rate": 0.001,
    "weight_decay": 0.0001,
    "scheduler": "cosine",
    "scheduler_step_size": 15,
    "scheduler_gamma": 0.5,
    "early_stopping_patience": 15,
    "use_positional_encoding": true
  }
}