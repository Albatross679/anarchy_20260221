{
  "name": "energy_lstm",
  "seed": 42,
  "output_dir": "output",
  "output": {
    "base_dir": "output",
    "save_config": true,
    "timestamp_format": "%Y%m%d_%H%M%S",
    "subdirs": {
      "checkpoints": "checkpoints",
      "tensorboard": "tensorboard"
    }
  },
  "console": {
    "enabled": true,
    "filename": "console.log",
    "tee_to_console": true
  },
  "checkpointing": {
    "enabled": true,
    "save_best": true,
    "save_every_n_epochs": 5,
    "metric": "rmse",
    "mode": "min",
    "best_filename": "model_best.pt"
  },
  "data": {
    "meter_files": [
      "data/meter-data-sept-2025.csv",
      "data/meter-data-oct-2025.csv"
    ],
    "building_metadata_file": "data/building_metadata.csv",
    "weather_file": "data/weather-sept-oct-2025.csv",
    "utility_filter": "ELECTRICITY",
    "cleaner": {
      "enabled": true,
      "lookup_path": "data/site_to_building_lookup.csv",
      "fuzzy_threshold": 80.0,
      "gap_limit_intervals": 8
    },
    "weather_features": [
      "temperature_2m",
      "relative_humidity_2m",
      "dew_point_2m",
      "direct_radiation",
      "wind_speed_10m",
      "cloud_cover",
      "apparent_temperature",
      "precipitation"
    ],
    "building_features": [
      "grossarea",
      "floorsaboveground",
      "building_age"
    ],
    "time_features": [
      "hour_of_day",
      "day_of_week",
      "is_weekend"
    ],
    "temporal_split": true,
    "split_date": "2025-10-01",
    "random_split_ratio": 0.8,
    "seq_length": 96,
    "stride": 4,
    "normalize_features": true,
    "normalize_target": true,
    "batch_size": 256,
    "num_workers": 4,
    "pin_memory": true
  },
  "lstm": {
    "hidden_size": 128,
    "num_layers": 2,
    "dropout_lstm": 0.2,
    "bidirectional": false,
    "static_embedding_dim": 32,
    "static_hidden_dims": [
      64
    ],
    "dropout_static": 0.2,
    "head_dims": [
      64,
      32
    ],
    "dropout_head": 0.3,
    "epochs": 100,
    "learning_rate": 0.001,
    "weight_decay": 1e-05,
    "scheduler": "cosine",
    "scheduler_step_size": 15,
    "scheduler_gamma": 0.5,
    "early_stopping_patience": 999,
    "max_grad_norm": 1.0
  }
}